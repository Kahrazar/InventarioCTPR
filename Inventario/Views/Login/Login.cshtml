@model Inventario.Models.Usuario
@using Inventario.Models
@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<h2 class="text-center titulo">Iniciar sesion</h2>

<div class="container">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-row">
                <div class="offset-4 col-4 form-group">
                    @Html.LabelFor(model => model.Cedula, htmlAttributes: new { @class = "control-label col" })
                    @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="offset-4 col-4  form-group">
                    @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "control-label col" })
                    @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-row">
                <div class="offset-5 col-2 form-group">
                    <input type="submit" value="Iniciar sesion" class="col 2 btn btn-outline-secondary" />
                </div>
            </div>
        </div>

    }

</div>







