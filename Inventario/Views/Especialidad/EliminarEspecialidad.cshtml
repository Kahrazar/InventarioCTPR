@model Inventario.Models.Especialidad

@{
    ViewBag.Title = "Eliminar Especialidad";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2 class="text-center titulo">Eliminar Especialidad</h2>

<h3 class="text-center">Deseas eliminar Esta Especialidad?</h3>

<div class="container">
    <h4 class="text-warning">Atencion: Si la especialidad tiene asignada objetos, estos se reasignaran automaticamente a Ninguna</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.nombreEspecialidad, "Nombre de la Especialidad", htmlAttributes: new {@class = "control-label" })
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombreEspecialidad)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver", "VerEspecialidades")
        </div>
    }
</div>
