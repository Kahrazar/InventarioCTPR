@model Inventario.Models.Especialidad

@{
    ViewBag.Title = "Agregar Especialidad";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center titulo">Agregar Especialidad</h2>


<div class="container">
    @using (Html.BeginForm("AdminAgregarEspecialidad", "Especialidad"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label" for="nombreEspecialidad">Nombre de la especialidad</label>
                 @Html.EditorFor(model => model.nombreEspecialidad, new { htmlAttributes = new { @class = "form-control", maxlength = 20 } })
                 @Html.ValidationMessageFor(model => model.nombreEspecialidad, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col offset-6">
                    <input type="submit" value="Agregar" class="btn btn-outline-secondary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver", "AdminVerEspecialidades")
    </div>
</div>
